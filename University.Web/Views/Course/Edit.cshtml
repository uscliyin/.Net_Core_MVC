@model University.Web.Models.ViewModels.CourseViewModel

<form method="post" asp-controller="Course" asp-action="Edit">
  <div class="mb-3">
        <label class="form-label">CourseName</label>
        <input type="text" class="form-control" asp-for="CourseName">
  </div>

    <div class="mb-3">
        <label class="form-label">CourseDescription</label>
        <textarea class="form-control" rows="3" asp-for="CourseDescription"></textarea>
    </div>

  <button type="submit" class="btn btn-primary">Update</button>
   <a type="button" class="btn btn-secondary" asp-controller="Course" asp-action="Index">Back to CourseLists</a>
</form>
